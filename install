#!/usr/bin/env bash
echo ""
echo "Deploy vimrc settings......"
#for i in $HOME/.vim $HOME/.vimrc $HOME/.gvimrc; do
#if [[ ( -e $i ) || ( -h $i ) ]]; then
#    today=`date +%Y%m%d%H%M%S`
#    echo "${i} has been renamed to ${i}.${today}.old"
#    cp "${i}" "${i}.${today}.old" -rf || die "Could not move ${i} to ${i}.${today}.old"
#  fi
#done

rm -rf $HOME/.vim
rm -rf $HOME/.vimrc
rm -rf $HOME/.gvimrc

current_path="${PWD}"

rm -rf $current_path/bundle
git clone https://github.com/gmarik/vundle.git $current_path/bundle/vundle 

ln -s $current_path $HOME/.vim
ln -s $current_path/vimrc $HOME/.vimrc

vim +BundleInstall +qall


echo "Deploy done."
